{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/client"
      ],
      "outFiles": [
        "${workspaceFolder}/client/dist/**/*.js"
      ],
      "preLaunchTask": "npm-build-client"
    },
    {
      "name": "Python: Run pytest current file",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/.venv/Scripts/python.exe",
      "args": ["-m", "pytest", "${file}"],
      "console": "integratedTerminal",
      "justMyCode": false
    }
  ]
}
