{
  "scopeName": "source.cps",
  "patterns": [
    { "name": "keyword.control.cps", "match": "\\b(if|else|while|for|return|break|continue)\\b" },
    { "name": "storage.type.function.cps", "match": "\\b(function|fn)\\b" },
    { "name": "constant.numeric.cps", "match": "\\b\\d+\\b" },
    { "name": "variable.other.cps", "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b" },
    { "name": "comment.line.double-slash.cps", "begin": "//", "end": "$" },
    { "name": "string.quoted.double.cps", "begin": "\"", "end": "\"", "patterns": [] }
  ]
}
